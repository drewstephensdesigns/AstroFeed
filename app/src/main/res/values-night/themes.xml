<resources>
    <!-- Base application theme. -->
    <style name="Theme.AstroFeed" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/black_darker</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_100</item>
        <item name="colorSecondaryVariant">@color/blue_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background of nav bar -->
        <item name="colorSurfaceContainer">@color/gunmetal</item>
        <item name="android:navigationBarColor">@color/gunmetal</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gunmetal</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/dark_silver</item>
        <item name="colorControlNormal">@color/dark_silver</item>

        <!-- Bottom Nav -->

        <!-- Sheets: https://github.com/maxkeppeler/sheets -->
        <item name="sheetsTitleColor">@color/silver</item>
        <item name="sheetsPrimaryColor">@color/silver</item>
        <item name="sheetsHighlightColor">@color/blue_200</item>
        <item name="sheetsDividerColor">@color/silver</item>
        <item name="sheetsContentColor">@color/silver</item>
        <item name="sheetsContentFont">@font/roboto</item>
        <item name="sheetsTitleFont">@font/noto_sans</item>
        <item name="sheetsNegativeButtonColor">@color/blue_200</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="newsCircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>


    <style name="materialButtonView" parent="">
        <item name="android:backgroundTint">@color/anti_flash_white_darker</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/gunmetal</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/noto_sans</item>
    </style>


    <style name="AboutCard" parent="Theme.AstroFeed">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="strokeWidth">.3dp</item>
        <item name="strokeColor">@color/blue_200</item>
        <item name="cardCornerRadius">18dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="AboutItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="drawableTint">@color/blue_200</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <!-- FAB -->
    <style name="FabExtendedMaterialTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:backgroundTint">@color/anti_flash_white_darker</item>
        <item name="android:iconTint">@color/gunmetal</item>
    </style>

</resources>