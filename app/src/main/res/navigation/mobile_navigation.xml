<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_news">

    <!-- News / Reddit -->
    <fragment
        android:id="@+id/navigation_news"
        android:name="com.github.drewstephensdesigns.astrofeed.ui.TabbedNewsFragment"
        android:label="@string/title_news"
        tools:layout="@layout/tabbed_news_fragment" />


    <!-- Capsules -->
    <fragment
        android:id="@+id/navigation_capsules"
        android:name="com.github.drewstephensdesigns.astrofeed.ui.CapsulesFragment"
        android:label="@string/title_capsules"
        tools:layout="@layout/fragment_capsules" />

    <!-- Launches -->
    <fragment
        android:id="@+id/navigation_launches"
        android:name="com.github.drewstephensdesigns.astrofeed.ui.TabbedLaunchFragment"
        android:label="@string/title_launches"
        tools:layout="@layout/tabbed_launch_fragment">
        <action
            android:id="@+id/action_launch_detail_dest"
            app:destination="@id/navigation_launch_details_dest" />
    </fragment>


    <!-- Upcoming Launch Details -->
    <fragment
        android:id="@+id/navigation_launch_details_dest"
        android:name="com.github.drewstephensdesigns.astrofeed.ui.LaunchDetailsFragment"
        android:label="@string/title_launch_details"
        tools:layout="@layout/fragment_launch_details">

        <argument
            android:name="patch"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="missionName"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="missionDescription"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="launchStatusName"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="launchStatusDescription"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="launchSiteName"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="launchSiteMapImage"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="launchSiteMapURL"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="launchTime"
            app:argType="string"
            app:nullable="true" />

    </fragment>

    <!-- Launch Vehicles -->
    <fragment
        android:id="@+id/navigation_rockets"
        android:name="com.github.drewstephensdesigns.astrofeed.ui.RocketsFragment"
        android:label="@string/title_rockets"
        tools:layout="@layout/fragment_rockets" >
        <action
            android:id="@+id/action_rocket_detail_dest"
            app:destination="@id/navigation_rocket_details_dest" />
    </fragment>

    <!-- Launch Vehicles Details -->
    <fragment
        android:id="@+id/navigation_rocket_details_dest"
        android:name="com.github.drewstephensdesigns.astrofeed.ui.RocketDetailsFragment"
        tools:layout="@layout/fragment_rocket_details">

        <!-- This is a bug with Android Studio -->
        <!-- https://issuetracker.google.com/issues/293665984 -->
        <argument
            android:name="rocketImage"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="rocketType"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="rocketBoosters"
            app:argType="integer"
            app:nullable="false" />

        <argument
            android:name="rocketStatus"
            app:argType="boolean"
            app:nullable="false" />

        <argument
            android:name="rocketFirstFlight"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="rocketSummary"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="rocketSummaryLink"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="rocketSuccessRate"
            app:argType="integer"
            app:nullable="false" />

        <argument
            android:name="rocketEngineType"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="rocketPropellant1"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="rocketPropellant2"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="rocketThrust"
            app:argType="integer"
            app:nullable="false" />

        <argument
            android:name="rocketCost"
            app:argType="integer"
            app:nullable="false" />

        <argument
            android:name="rocketStages"
            app:argType="integer"
            app:nullable="false" />

    </fragment>

    <!-- About Main Fragment -->
    <fragment
        android:id="@+id/navigation_about"
        android:name="com.github.drewstephensdesigns.astrofeed.ui.AboutFragment"
        android:label="@string/title_about"
        tools:layout="@layout/fragment_about" />

    <!-- Company Fragment -->
    <fragment
        android:id="@+id/navigation_company"
        android:name="com.github.drewstephensdesigns.astrofeed.ui.CompanyFragment"
        android:label="@string/title_company"
        tools:layout="@layout/fragment_company" />

</navigation>